@using ExpenseTrackerCoreMVC.ViewModels

@model ExpenseAddEditFormViewModel

<div class="container">
    <h2>Add Expense</h2>
    <a class="btn btn-secondary mb-3" asp-action="Index" asp-controller="Expenses">Back</a>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Expense.Name" class="form-label"></label>
            <input asp-for="Expense.Name" class="form-control"/>
        </div>
        <div>
            <label asp-for="Expense.Amount" class="form-label"></label>
            <input asp-for="Expense.Amount" class="form-control" />
        </div>
        <div>
            <label asp-for="Expense.CategoryId" class="form-label"></label>
            @Html.DropDownListFor(model => model.Expense.CategoryId,
                        new SelectList(Model.Categories, "Id", "Name"),
                        "Select Category",
                        new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary mt-2">Add Expense</button>
    </form>
</div>