@model IEnumerable<ExpenseTrackerCoreMVC.Models.Expense>

<h2>Expenses</h2>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
         </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                    <td>@item.Category</td>
                    <td>@item.DateAdded.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>