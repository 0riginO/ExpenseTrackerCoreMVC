@model IEnumerable<ExpenseTrackerCoreMVC.Models.Expense>

<div>
    <h2>Expenses</h2>
    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Expenses">Add New Expense</a>
    <a class="btn btn-primary mb-3" asp-action="Index" asp-controller="Home">Back</a>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
         </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                    <td>@item.Category</td>
                    <td>@item.DateAdded.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>