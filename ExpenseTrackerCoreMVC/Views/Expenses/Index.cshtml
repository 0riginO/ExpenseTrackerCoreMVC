@model IEnumerable<ExpenseTrackerCoreMVC.Models.Expense>

<div>
    <h2>Expenses</h2>
    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Expenses">Add New Expense</a>
    <a class="btn btn-primary mb-3" asp-action="Index" asp-controller="Home">Back</a>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr style="text-align:center;">
                <th>Name</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date Added</th>
                <th>Action</th>
            </tr>
         </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Amount.ToString("N2")</td>
                    <td>@item.Category</td>
                    <td>@item.DateAdded.ToString("yyyy-MM-dd")</td>
                    <td style="text-align:center;">
                        <a class="btn btn-primary" asp-action="Update" asp-controller="Expenses" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="Delete" asp-controller="Expenses" method="post" onsubmit="return confirm('Are you sure you want to delete this expense?');" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>