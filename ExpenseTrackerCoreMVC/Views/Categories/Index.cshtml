@model IEnumerable<ExpenseTrackerCoreMVC.Models.Category>
<div>
    <h2>Categories</h2>
    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Categories">Add</a>
    <a class="btn btn-primary mb-3" asp-action="Index" asp-controller="Home">Back</a>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DateAdded.ToString("yyyy-MM-dd")</td>
                        <td style="text-align:center;">
                            <a class="btn btn-primary" asp-action="Update" asp-controller="Categories" asp-route-id="@item.Id">Edit</a>
                            <form asp-action="Delete" asp-controller="Categories" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>